    "paths": {
      "/events": {
        "post": {
          "tags": [
            "event"
          ],
          "operationId": "saveEvent",
          "summary": "Saves an event to the datastore",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "schema": {
                "$ref": "#/definitions/KeptnContextExtendedCE"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "created"
            },
            "default": {
              "description": "error",
              "schema": {
                "$ref": "#/definitions/error"
              }
            }
          }
        },
        "get": {
            "tags": [
              "event"
            ],
            "operationId": "getEvents",
            "summary": "Gets events from the data store",
            "responses": {
              "200": {
                "description": "ok",
                "schema":{
                    "type":"array",
                    "items": {
