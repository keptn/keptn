          "eventId":{
            "type":"string"
          },
          "keptnService":{
            "type":"string"
          },
          "message": {
            "type":"string"
          },
          "logLevel":{
            "type":"string"
          }
        }
      },
      "error": {
        "type": "object",
        "required": [
          "message"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int64"
          },
          "message": {
            "type": "string"
          },
          "fields": {
            "type": "string"
          }
        }
      },
      "principal": {
        "type": "string"
      }
    }
