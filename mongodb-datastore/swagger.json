        "get": {
            "tags": [
              "event"
            ],
            "operationId": "getEvent",
            "summary": "Gets events from the data store",
            "parameters": [ {
                "name": "id",
                "in": "path",
                "type":"string",
                "required": true,
                "description": "ID of the event to get"
                }
            ],
            "responses": {
              "200": {
                "description": "ok",
                "schema":{
                  "type":"array",
                  "items": {
                      "$ref":"#/definitions/KeptnContextExtendedCE"
                  }
                }
              },
              "default": {
                "description": "error",
                "schema": {
                  "$ref": "#/definitions/error"
                }
              }
            }
          }
      },
      "/logs": {
        "post": {
          "tags": [
            "logs"
          ],
          "operationId": "saveLog",
          "summary": "Saves a log to the datastore",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "schema": {
                "type":"array",
                "items": {
                  "$ref": "#/definitions/LogEntry"
                }
              }
            }
          ],
          "responses": {
            "201": {
              "description": "created"
            },
            "default": {
              "description":"error",
              "schema": {
                "$ref": "#/definitions/error"
              }
            }
          }
        },
        "get": {
          "tags": [
            "logs"
          ],
          "operationId": "getLogs",
          "summary": "gets the logs from the datastore",
          "responses": {
            "200": {
              "description":"ok",
              "schema":{
                "type":"array",
                "items": {
                  "$ref":"#/definitions/LogEntry"
                }
              }
            },
            "default":{
              "description":"error",
              "schema":{
                "$ref":"#/definitions/error"
              }
            }
          }
        }
