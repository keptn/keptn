{
  "name": "bridge-server",
  "license": "Apache-2.0",
  "private": true,
  "type": "module",
  "description": "Express server specific dependencies.",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/server/server.js",
    "build": "tsc --build",
    "dev": "nodemon --config nodemon.json",
    "test": "mocha -p tsconfig.spec.json",
    "test:jest": "node --experimental-vm-modules --experimental-specifier-resolution=node node_modules/jest/bin/jest.js",
    "test2": "jest"
  },
  "bugs": {
    "url": "https://github.com/keptn/keptn/issues"
  },
  "dependencies": {
    "adm-zip": "^0.5.7",
    "axios": "^0.21.4",
    "cookie-parser": "^1.4.5",
    "crypto-random-string": "^4.0.0",
    "depd": "^2.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "memorystore": "^1.6.6",
    "morgan": "^1.10.0",
    "pug": "^3.0.2",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@types/adm-zip": "^0.4.34",
    "@types/chai": "^4.2.22",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "^27.0.2",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^14.17.9",
    "@types/supertest": "^2.0.11",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.3.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.3.4",
    "jest": "^27.3.0",
    "mocha": "^9.1.3",
    "nodemon": "^2.0.13",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.3"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "tests/**.ts"
    ],
    "node-option": [
      "loader=ts-node/esm",
      "experimental-specifier-resolution=node"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "setupFiles": ["./.temp/setEnvVars.js"]
  }
}
