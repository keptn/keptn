{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "dnsSubdomainName": {
      "pattern": "^([a-z0-9]|[a-z0-9][a-z0-9-.]{0,251}[a-z0-9])$"
    },
    "hostname": {
      "pattern": "^(([a-z0-9]|[a-z0-9][a-z0-9-.]{0,251}[a-z0-9])(:[0-9]+)?)$"
    },
    "image": {
      "properties": {
        "registry": {
          "$ref": "#/definitions/hostname"
        },
        "repository": {
          "pattern": "^[a-z0-9][a-z0-9-./]{2,96}$"
        },
        "pullPolicy": {
          "enum": [
            "IfNotPresent",
            "Always"
          ]
        },
        "pullSecrets": {
          "$ref": "#/definitions/pullSecrets"
        }
      }
    },
    "pullSecrets": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/dnsSubdomainName"
      }
    }
  },
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "imagePullSecrets": {
          "$ref": "#/definitions/pullSecrets"
        },
        "registry": {
          "$ref": "#/definitions/hostname"
        }
      }
    },
    "remoteControlPlane": {
      "type": "object",
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "if": {
        "properties": {
          "enabled": {
            "const": true
          }
        }
      },
      "then": {
        "properties": {
          "api": {
            "type": "object",
            "required": [
              "protocol",
              "hostname",
              "token"
            ],
            "properties": {
              "hostname": {
                "$ref": "#/definitions/hostname"
              },
              "protocol": {
                "enum": [
                  "http",
                  "https"
                ]
              },
              "apiValidateTls": {
                "type": "boolean"
              },
              "token": {
                "pattern": "^[A-Za-z0-9-.]{2,63}$"
              }
            }
          }
        }
      }
    },
    "helmservice": {
      "type": "object",
      "required": [
        "image"
      ],
      "properties": {
        "image": {
          "$ref": "#/definitions/image"
        },
        "service": {
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "distributor": {
      "type": "object",
      "required": [
        "image"
      ],
      "properties": {
        "image": {
          "$ref": "#/definitions/image"
        },
        "stageFilter": {
          "pattern": "^$|[A-Za-z0-9-.]{2,63}$"
        },
        "serviceFilter": {
          "pattern": "^$|[A-Za-z0-9-.]{2,63}$"
        },
        "projectFilter": {
          "pattern": "^$|[A-Za-z0-9-.]{2,63}$"
        }
      }
    }
  }
}
