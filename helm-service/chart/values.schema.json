{
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "global": {
      "properties": {
        "keptn": {
          "properties": {
            "registry": {
              "pattern": "^([a-z0-9][a-z0-9-.]{2,63})(:[0-9]+)?([a-z0-9-_./]{1,128})$"
            }
          }
        }
      }
    },
    "remoteControlPlane": {
      "type": "object",
      "required": [
        "enabled"
      ],
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      },
      "if": {
        "properties": {
          "enabled": {
            "const": true
          }
        }
      },
      "then": {
        "properties": {
          "api": {
            "type": "object",
            "required": [
              "protocol",
              "hostname"
            ],
            "properties": {
              "hostname": {
                "pattern": "^([a-z0-9][a-z0-9-.]{2,63})(:[0-9]+)?$"
              },
              "protocol": {
                "enum": [
                  "http",
                  "https"
                ]
              },
              "apiValidateTls": {
                "type": "boolean"
              }
            },
            "oneOf": [
              {
                "required": [
                  "token"
                ],
                "properties": {
                  "token": {
                    "pattern": "^[A-Za-z0-9-.]{2,63}$",
                    "type": "string"
                  }
                }
              },
              {
                "required": [
                  "tokenSecretName"
                ],
                "properties": {
                  "tokenSecretName": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            ]
          }
        }
      }
    },
    "helmservice": {
      "type": "object",
      "required": [
        "image"
      ],
      "properties": {
        "image": {
          "properties": {
            "pullPolicy": {
              "enum": [
                "IfNotPresent",
                "Always"
              ]
            }
          }
        },
        "service": {
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "distributor": {
      "type": "object",
      "required": [
        "image"
      ],
      "properties": {
        "image": {
          "properties": {
            "pullPolicy": {
              "enum": [
                "IfNotPresent",
                "Always"
              ]
            }
          }
        },
        "stageFilter": {
          "pattern": "^$|[A-Za-z0-9-.]{2,63}$"
        },
        "serviceFilter": {
          "pattern": "^$|[A-Za-z0-9-.]{2,63}$"
        },
        "projectFilter": {
          "pattern": "^$|[A-Za-z0-9-.]{2,63}$"
        },
        "config": {
          "properties": {
            "queueGroup": {
              "properties": {
                "enabled": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}
