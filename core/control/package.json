{
  "name": "sh.keptn.core.control",
  "version": "0.1.0",
  "description": "Keptn control component",
  "main": "dist/server.js",
  "scripts": {
    "build-ts": "tsc && npm run html",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "html": "copyfiles src/**/*.html src/**/*.css dist/",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "dev": "nodemon",
    "test": "echo \"Testing...\" && nyc --reporter=text nyc mocha && nyc report",
    "lint": "tslint --project tslint.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keptn/keptn.git"
  },
  "author": "Florian Bacher",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/keptn/keptn/issues"
  },
  "homepage": "https://github.com/keptn/keptn#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^7.0.6",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "sinon": "^7.2.4",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/express": "^4.16.1",
    "axios": "^0.18.0",
    "cloudevents-sdk": "^0.2.0",
    "express": "^4.16.4",
    "github-api": "^3.0.0",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "kubernetes-client": "^6.8.3",
    "mocha": "^6.0.2",
    "mustache": "^3.0.1",
    "nodejs-base64": "^1.0.3",
    "reflect-metadata": "^0.1.13",
    "swagger-express-ts": "^1.0.1",
    "swagger-ui-dist": "^3.20.9",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/server.ts",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "cobertura"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
