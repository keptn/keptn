{
  "name": "sh.keptn.core.event-broker-ext",
  "version": "0.1.0",
  "description": "Keptn event broker (ext)",
  "main": "dist/server.js",
  "scripts": {
    "build-ts": "tsc && npm run html",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "html": "copyfiles src/**/*.html src/**/*.css dist/",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w",
    "dev": "nodemon",
    "test": "echo \"Testing...\" && nyc --reporter=text nyc mocha && nyc report",
    "lint": "tslint --project tslint.json"
  },
  "author": "keptn.sh",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^7.0.6",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "sinon": "^7.2.4",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.9.6",
    "@types/sinon": "^7.0.6",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "express": "^4.16.4",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "kubernetes-client": "^6.9.0",
    "mocha": "^6.0.2",
    "moment": "^2.24.0",
    "reflect-metadata": "^0.1.13",
    "swagger-express-ts": "^1.0.1",
    "swagger-ui-dist": "^3.20.9",
    "verify-github-webhook": "^1.0.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/server.ts",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "cobertura"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
